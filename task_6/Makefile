CC = gcc
SERVER_TARGET = server
SERVER_SOURCE = $(SERVER_TARGET).c
CLIENT_TARGET = client
CLIENT_SOURCE = $(CLIENT_TARGET).c
TCP_SETTINGS_TARGET = tcp_settings
TCP_SETTINGS_SOURCE = $(TCP_SETTINGS_TARGET).c

all:
	$(CC) -pthread -o $(SERVER_TARGET) $(SERVER_SOURCE)
	$(CC) -o $(CLIENT_TARGET) $(CLIENT_SOURCE)
	$(CC) -c -o $(TCP_SETTINGS_TARGET) $(TCP_SETTINGS_SOURCE)

clean:
	rm $(SERVER_TARGET) $(CLIENT_TARGET) $(TCP_SETTINGS_TARGET)

