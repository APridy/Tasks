CC = gcc
SERVER_TARGET = server
SERVER_SOURCE = $(SERVER_TARGET).c
CLIENT_TARGET = client
CLIENT_SOURCE = $(CLIENT_TARGET).c
DATA_TYPES_TARGET = data_types
DATA_TYPES_SOURCE = $(DATA_TYPES_TARGET).c

all:
	$(CC) -o $(SERVER_TARGET) $(SERVER_SOURCE)
	$(CC) -o $(CLIENT_TARGET) $(CLIENT_SOURCE)
	$(CC) -c -o $(DATA_TYPES_TARGET) $(DATA_TYPES_SOURCE)

clean:
	rm $(SERVER_TARGET) $(CLIENT_TARGET) $(DATA_TYPES_TARGET) *.txt

